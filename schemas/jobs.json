{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "jobs.json",
  "$ref": "#/definitions/jobs",
  "definitions": {
    "jobs": {
      "type": "object",
      "required": [
        "id",
        "name",
        "executionId",
        "classPathList",
        "applicationClass",
        "applicationJar"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "executionId": {
          "type": "string"
        },
        "applicationName": {
          "type": "string"
        },
        "classPathList": {
          "type": "array",
          "items": {
            "type": "string",
            "minItems": 1
          }
        },
        "applicationClass": {
          "type": "string"
        },
        "applicationJar": {
          "type": "string"
        },
        "applicationParameters": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "parameter", "value", "required"
            ],
            "properties": {
              "parameter": {
                "type": "string"
              },
              "value": {
                "type": [ "string", "boolean", "number" ]
              },
              "required": {
                "type": "boolean"
              }
            },
            "additionalProperties": false
          }
        },
        "confParameters": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "parameter", "value", "required"
            ],
            "properties": {
              "parameter": {
                "type": "string"
              },
              "value": {
                "type": ["string", "boolean", "number"]
              },
              "required": {
                "type": "boolean"
              }
            },
            "additionalProperties": false
          }
        },
        "activity": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [ "processId", "status", "description", "sparkUiLink" ],
            "properties": {
              "processId": { "type":  "string" },
              "status": {
                "type": "string",
                "enum": [ "PENDING", "COMPLETE", "ERROR", "PROCESSING" ]
              },
              "details": { "type": "string" },
              "sparkUiLink": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
